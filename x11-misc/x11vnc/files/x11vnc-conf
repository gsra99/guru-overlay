AUTH="/var/run/lightdm/root/:0"
RFBAUTH="/etc/x11vnc/passwd"
RFBPORT="5900"
LOGFILE="/var/log/x11vnc.log"
IP_ADDRESS="172.16.0."
DISPLAY="0"
EXTRA_SETTINGS="-nocursor -repeat"

SETTINGS="-auth $AUTH -rfbauth $RFBAUTH -rfbport $RFBPORT -o $LOGFILE \
-allow $IP_ADDRESS -display :$DISPLAY $EXTRA_SETTINGS"

