pidfile="/run/lvmetad.pid"
command="/sbin/lvmetad"
command_args="${LVMETAD_OPTS:=-p ${pidfile}}"
start_stop_daemon_args="--pidfile ${pidfile}"

depend() {
	:
}

# KK: added pre-start check for required directory to avoid error messages
start_pre()
{
	checkpath --directory --owner root:root --mode 0700 /run/lvm || return 1
}
