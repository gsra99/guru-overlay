#!/sbin/runscript

depend() {
	need net
	after xdm
}

start() {
	ebegin "Starting x11vnc"
	start-stop-daemon --start --quiet --exec /usr/local/sbin/x11vnc-start \
	--pidfile /var/run/x11vnc.pid
	eend $?
}

stop() {
	ebegin "Stopping x11vnc"
	start-stop-daemon --stop --quiet --pidfile /var/run/x11vnc.pid
	eend $?
}
